<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with model: user, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :name, '名前' %><span class="badge badge-danger ml-1">必須</span>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :age, '年齢（任意）' %>
        <%= f.number_field :age, class: 'form-control', min:0 %>
      </div>

      <div class="form-group">
        <%= f.label :profile, 'プロフィール（任意）' %>
        <%= f.text_area :profile, class: 'form-control', maxlength: 255 %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %><span class="badge badge-danger ml-1">必須</span>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード（6字以上で入力してください）' %><span class="badge badge-danger ml-1">必須</span>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, '確認用パスワード' %><span class="badge badge-danger ml-1">必須</span>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <p>すでにアカウントをお持ちの方は <%= link_to 'こちら', login_path %></p>

  </div>
</div>