  <% @goals.each do |goal| %>
  
    <h4 class="text-center">目標：<%= goal.name %></h4>
    
    <div class="row">
      <div class="box-2 col-sm-12">
        <table class="table">
          <thead>
            <th>
              <h5>やるべき習慣</h5>
            </th>
            <th></th>
          </thead>
          <tbody class="text-center">
            
            <% goal.good_habits.each do |good_habit| %>
              <tr>
                <td><%= good_habit.name %></td>
                <td>
                  <%= link_to '習慣を削除', "/goals/#{goal.id}/good_habits/#{good_habit.id}", method: :delete, data: { confirm: '習慣を削除してもよろしいですか？' } %>
                </td>
              </tr>
            <% end %>

          </tbody>
        </table>
      </div>
    </div>
    <div class="text-right">
      <%= link_to '習慣を追加', new_goal_good_habit_url(goal), class: 'btn btn-sm btn-primary' %>
      <%= link_to '目標を編集', edit_goal_path(goal), class: 'btn btn-sm btn-success' %>
      <%= link_to '目標を削除', goal_path(goal), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: '本当に削除してもよろしいですか？' } %>
    </div>
  <% end %>
  
  <%= paginate @goals %>
