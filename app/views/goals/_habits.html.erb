<div class="col-sm-6">
  <div class="card">
    
    <h5 class="card-header">
      <% if habits == goal.good_habits %>
        やるべき習慣
      <% else %>
        やめるべき習慣
      <% end %>
    </h5>
        
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <% habits.each do |habit| %>
          <li class="list-group-item list-group-item-action d-flex justify-content-between">
            <%= habit.name %>
            <% if habits == goal.good_habits %>
              <%= link_to '習慣を削除', "/goals/#{goal.id}/good_habits/#{habit.id}", method: :delete, data: { confirm: '「習慣」に関連した「がんばり」も一緒に削除されます。よろしいですか？' }, class: 'text-danger' %>
            <% else %>
              <%= link_to '習慣を削除', "/goals/#{goal.id}/bad_habits/#{habit.id}", method: :delete, data: { confirm: '「習慣」に関連した「がんばり」も一緒に削除されます。よろしいですか？' }, class: 'text-danger' %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

